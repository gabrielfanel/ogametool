<Window x:Class="OGameViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="700" >
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Foreground" Value="DeepSkyBlue" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="MaxDropDownHeight" Value="100" />
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="DeepSkyBlue" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Opacity" Value="0.6" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="DeepSkyBlue" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="res/og_background.jpg" Stretch="None"></ImageBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Select a server :" />
            <ComboBox ItemsSource="{Binding ServerNames}" SelectedItem="{Binding SelectedUniverse, Mode=TwoWay}" MinWidth="200" />
        </StackPanel>
        
        <DataGrid Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Players, Mode=TwoWay}" SelectedItem="{Binding SelectedPlayer, Mode=TwoWay}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Player" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Alliance" Binding="{Binding Alliance}" />
            </DataGrid.Columns>
        </DataGrid>
        
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Player's Info">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Points :"/>
                <TextBlock Grid.Row="0" Grid.Column="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="PlayerTotalPoints" />
                            <Binding Path="PlayerTotalPointsRank" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Economy Points :"/>
                <TextBlock Grid.Row="1" Grid.Column="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="PlayerEconomyPoints" />
                            <Binding Path="PlayerEconomyPointsRank" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Research Points :"/>
                <TextBlock Grid.Row="2" Grid.Column="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="PlayerResearchPoints" />
                            <Binding Path="PlayerResearchPointsRank" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Military Points :"/>
                <TextBlock Grid.Row="3" Grid.Column="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="PlayerMilitaryPoints" />
                            <Binding Path="PlayerMilitaryPointsRank" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Honor Points :"/>
                <TextBlock Grid.Row="4" Grid.Column="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="PlayerHonorPoints" />
                            <Binding Path="PlayerHonorPointsRank" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
